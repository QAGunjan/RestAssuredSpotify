pipeline {
    agent any

    stages {
        stage('Geting Code from Github') {
            steps {
                git 'https://github.com/QAGunjan/RestAssuredSpotify.git'
            }
	}	
    stage('Build Clean') {
            steps {
                bat 'mvn clean'          
            }
    }
    stage('Build Code') {
            steps {
                bat 'mvn compile'
            }
    }
    stage('TestRunning') {
            steps {
                bat 'mvn clean test'         
            }
            
             post {
               
                success {
                   allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
                   emailext attachLog: true, attachmentsPattern: '**/Reports/index.html', body: '$DEFAULT_CONTENT', subject: '$DEFAULT_SUBJECT', to: 'gunjanrawat033@gmail.com'				
                   }
            }
    }
    }
    }